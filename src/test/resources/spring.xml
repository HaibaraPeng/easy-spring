<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="person" class="org.example.spring.beans.factory.bean.Person">
        <property name="name" value="derek"/>
        <property name="car" ref="car"/>
    </bean>

    <bean id="car" class="org.example.spring.beans.factory.bean.Car">
        <property name="brand" value="porsche"/>
    </bean>

    <bean class="org.example.spring.common.CustomBeanFactoryPostProcessor"/>

    <bean class="org.example.spring.common.CustomerBeanPostProcessor"/>

    <bean id="helloService" class="org.example.spring.service.HelloService"/>
</beans>